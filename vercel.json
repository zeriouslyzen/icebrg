{
  "version": 2,
  "buildCommand": "cd frontend && rm -rf dist && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/encyclopedia",
      "destination": "/api/encyclopedia.js"
    },
    {
      "source": "/api/encyclopedia/search/:query",
      "destination": "/api/encyclopedia-search.js?query=:query"
    },
    {
      "source": "/api/encyclopedia/:category",
      "destination": "/api/encyclopedia-category.js?category=:category"
    },
    {
      "source": "/api/query",
      "destination": "/api/query.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/encyclopedia",
      "destination": "/encyclopedia.html"
    },
    {
      "source": "/encyclopedia.html",
      "destination": "/encyclopedia.html"
    },
    {
      "source": "/study.html",
      "destination": "/study.html"
    },
    {
      "source": "/research.html",
      "destination": "/research.html"
    },
    {
      "source": "/features.html",
      "destination": "/features.html"
    },
    {
      "source": "/wiki.html",
      "destination": "/wiki.html"
    },
    {
      "source": "/app",
      "destination": "/app.html"
    },
    {
      "source": "/research",
      "destination": "/research.html"
    },
    {
      "source": "/wiki",
      "destination": "/wiki.html"
    },
    {
      "source": "/study",
      "destination": "/study.html"
    },
    {
      "source": "/features",
      "destination": "/features.html"
    },
    {
      "source": "/protocols",
      "destination": "/protocols.html"
    },
    {
      "source": "/admin",
      "destination": "/admin.html"
    },
    {
      "source": "/pegasus",
      "destination": "/pegasus.html"
    },
    {
      "source": "/pegasus.html",
      "destination": "/pegasus.html"
    },
    {
      "source": "/dossier",
      "destination": "/dossier.html"
    },
    {
      "source": "/civilization",
      "destination": "/civilization.html"
    },
    {
      "source": "/matrix",
      "destination": "/matrix.html"
    },
    {
      "source": "/entity",
      "destination": "/entity.html"
    },
    {
      "source": "/investigations",
      "destination": "/investigations.html"
    },
    {
      "source": "/colossus",
      "destination": "/colossus/index.html"
    },
    {
      "source": "/colossus/graph",
      "destination": "/colossus/graph.html"
    },
    {
      "source": "/colossus/entity",
      "destination": "/colossus/entity.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}