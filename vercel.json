{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/encyclopedia",
      "dest": "/api/encyclopedia.js"
    },
    {
      "src": "/api/encyclopedia/search/(.*)",
      "dest": "/api/encyclopedia-search.js?query=$1"
    },
    {
      "src": "/api/encyclopedia/(.*)",
      "dest": "/api/encyclopedia-category.js?category=$1"
    },
    {
      "src": "/api/query",
      "dest": "/api/query.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/encyclopedia",
      "dest": "/frontend/encyclopedia.html"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/styles.css",
      "destination": "/frontend/styles.css"
    },
    {
      "source": "/main.js",
      "destination": "/frontend/main.js"
    },
    {
      "source": "/manifest.json",
      "destination": "/frontend/manifest.json"
    }
  ]
}

