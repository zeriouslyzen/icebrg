{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/encyclopedia",
      "destination": "/api/encyclopedia.js"
    },
    {
      "source": "/api/encyclopedia/search/:query",
      "destination": "/api/encyclopedia-search.js?query=:query"
    },
    {
      "source": "/api/encyclopedia/:category",
      "destination": "/api/encyclopedia-category.js?category=:category"
    },
    {
      "source": "/api/query",
      "destination": "/api/query.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/encyclopedia",
      "destination": "/frontend/encyclopedia.html"
    },
    {
      "source": "/styles.css",
      "destination": "/frontend/styles.css"
    },
    {
      "source": "/main.js",
      "destination": "/frontend/main.js"
    },
    {
      "source": "/manifest.json",
      "destination": "/frontend/public/manifest.json"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}
